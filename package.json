{
	"name": "electron-nextjs-project",
	"main": "src-electron/main/index.js",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"electron .\"",
		"build": "next build && electron-builder",
		"start": "next start",
		"lint": "eslint"
	},
	"build": {
		"appId": "com.yourname.electronnextjs",
		"directories": {
			"output": "dist"
		},
		"files": [
			"src-electron/**/*",
			"package.json",
			"out/**/*"
		],
		"win": {
			"target": "nsis"
		}
	},
	"dependencies": {
		"@phosphor-icons/react": "^2.1.10",
		"electron-serve": "^3.0.0",
		"next": "16.1.4",
		"react": "19.2.3",
		"react-dom": "19.2.3"
	},
	"devDependencies": {
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"babel-plugin-react-compiler": "1.0.0",
		"concurrently": "^9.2.1",
		"electron": "^40.0.0",
		"electron-builder": "^26.4.0",
		"eslint": "^9",
		"eslint-config-next": "16.1.4",
		"typescript": "^5"
	}
}
